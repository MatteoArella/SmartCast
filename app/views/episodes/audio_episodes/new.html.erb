<div class="banner create-episode-banner">
  <h1>Create your Podcast Episode</h1>
</div>

<%= form_for(@episode, :url => { :action => "create" }, html: { :multipart => true, id: "input-container", class: "cf wrapper"}) do |f| %>
  <div id="image-upload">
    <%= f.file_field :image %>
  </div>
  <div id="title">
    <%= f.text_field :title, placeholder: "Insert Episode title", class: "border-animation" %>
  </div>
  <div id="description" >
    <%= f.text_area :description, placeholder: "Insert Episode description", class: "border-animation" %>
  </div>

  <div class="btn-bar">
    <div class="field">
      <%= f.file_field :mp3 %>
    </div>
    <div class="right">
      <%= f.submit "Create Episode", class: "button button-highlight" %>
      <%= link_to "Cancel", :back, class: "button button-white" %>
    </div>
  </div>
<% end %>