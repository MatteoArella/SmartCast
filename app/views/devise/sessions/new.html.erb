<div class="banner signin-banner">
  <h1>Sign In to SmartCast</h1>
</div>

<div class="wrapper-skinny devise-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :login, "Username or Email" %><br />
      <%= f.text_field :login, placeholder: "Username or Email", :class => "border-animation"  %>
    </div>
      
    <div class="field">
      <%= f.label :password %>
      <%- if devise_mapping.recoverable? %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end -%><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "border-animation" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <%- if devise_mapping.confirmable? %>
    <div class="field">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Sign In", :class => "button button-highlight" %>
      <%= link_to "Sign Up", new_registration_path(resource_name), :class => "button button-white" %>
      <%= link_to "Sign In with Facebook", user_facebook_omniauth_authorize_path, :class => "button button-white" %>
      <%- # render "devise/shared/links" -%>
    </div>

  <% end %>
</div>