<div class="banner signup-banner">
  <h1>Sign Up</h1>
</div>

<div class="wrapper-skinny devise-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, required: true, :class => "border-animation" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", required: true, :class => "border-animation" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", required: true, :class => "border-animation" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true, :class => "border-animation" %>
    </div>

    <table>
      <td>
        <div class="field">
          <%= f.label :role_artist, :class => "label-container" do %>
            Artist
            <%= f.radio_button :role, 'artist', :checked => true %>
            <span class="checkmark"></span>
          <% end %>
        </div>
      </td>
      <td>
        <div class="field">
          <%= f.label :role_learner, :class => "label-container" do %>
            Learner
            <%= f.radio_button :role, 'learner'%>
            <span class="checkmark"></span>
          <% end %>
        </div>
      </td>
    </table>
    
    <div class="actions">
      <%= f.submit "Sign up", :class => "button button-highlight" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>