<div class="banner signup-banner">
  <h1>Sign Up to SmartCast</h1>
</div>

<div class="wrapper-skinny devise-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username%>
      <%= f.text_field :username, autofocus: true, :class => "border-animation", placeholder: "Enter Username" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", :class => "border-animation", placeholder: "Enter Email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "border-animation", placeholder: "Enter Password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "border-animation", placeholder: "Repeat Password" %>
    </div>

        <div class="field">
          <label>Choose a role: </label>
          <table id="sign-up-role-table">

            <td>
          <%= f.label :role_artist, :class => "label-container" do %>
            Artist
            <%= f.radio_button :role, 'artist', :checked => true %>
            <span class="checkmark"></span>
          <% end %>
        </td>
        <td>
          <%= f.label :role_learner, :class => "label-container" do %>
            Learner
            <%= f.radio_button :role, 'learner'%>
            <span class="checkmark"></span>
          <% end %>
        </td>
      </table>
        </div>

        <div class="field">
          <%= flash[:recaptcha_error] %>
          <%= recaptcha_tags %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class => "button button-highlight" %>
          <%= render "devise/shared/links" %>
        </div>

  <% end %>

</div>