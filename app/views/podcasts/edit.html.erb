<div class="banner smartcast-banner">
  <h1>Edit Podcast</h1>
</div>

<%= form_for(@podcast, as: :podcast, :url => {:controller => "podcasts",:action => "update"}, html: { :multipart => true, id: "input-container", class: "cf wrapper"}) do |f| %>
  <div id="image-upload">
    <%= f.file_field :image %>
  </div>
  <div id="title">
    <%= f.text_field :title, placeholder: "Insert Podcast title", class: "border-animation" %>
  </div>
  <div id="description" >
    <%= f.text_area :description, placeholder: "Insert Podcast description", class: "border-animation" %>
  </div>

  <div class="field">
    <div class="btn-bar">
      <a class="button button-alert" href="javascript:void(0);">Delete podcast</a>
      <div class="right">
        <%= f.submit "Save Changes", class: "button button-highlight" %>
        <%= link_to "Cancel", root_path, class: "button button-white" %>
      </div>
    </div>
  </div>
<% end %>