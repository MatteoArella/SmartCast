<div class="banner show-podcast-banner">
  <%= image_tag @podcast.image.url, alt: "podcast-thumbnail" %>
  <h1><%= @podcast.name %></h1>
  <div class="pod-description">
    <table>
      <td>
        <p class="col-large"><%= @podcast.description %></p>
      </td>
      <td><%= link_to (image_tag @artist.avatar, id: "artist-thumbnail", alt: "user-thumbnail"), user_path(@artist) %></td>
      <td class="col-medium"><%= link_to @artist.username, user_path(@artist) %></td>
      <td class="col-medium"><%= link_to "Edit Podcast", edit_podcast_path%></td>
    </table>
  </div>
  
</div>

  <div id="episodes">
    <div class="wrapper-skinny">
      <ul class="cf">
        <% for e in @episodes %>
          <li class="cf">
            <div class="episode_thumbnail">
              <a href="#"><%= image_tag e.image.url, alt: "episode-thumbnail" %></a>
            </div>
            <div class="episode_overview">
              <table>
                <td class="col-large">
                  <h2><%= link_to e.name, podcast_episode_path(@podcast, e)
                  %></h2>
                  <p class="description"><%= e.description %></p>
                </td>
		<% if current_user.admin? or current_user == @podcast.artist%>

                	<td>
                  		<%= link_to "Edit", edit_episode_path(e), class: "button button-highlight" %>
                	</td>
                	<td>
                  		<%= link_to "Delete", e, method: :delete,
                                  data: { confirm: "You sure?" }, class: "button button-highlight" %>
                	</td>

		<% end %>
              </table>
            </div>
          </li>
        <% end %>
      </ul>

      <div class="pagination">
        <%= will_paginate @episodes %>
      </div>
    </div>
  </div>

  <%= link_to "Add episode", new_podcast_episode_path(@podcast), class: "button button-highlight" %>
  <% if current_user.admin? %>
    | <%= link_to "delete", @podcast, method: :delete,
                                  data: { confirm: "You sure?" }, class: "button button-highlight" %>
<% end %>
</div>





