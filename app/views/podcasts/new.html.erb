<div class="banner create-podcast-banner">
      <h1>Create your Podcast</h1>
    </div>


    <%= form_for(@podcast, html: { id: "input-container", class: "cf wrapper"}) do |f| %>
        <div id="image-upload">
          <input type="file" name="thumbnail" id="thumbnail" class="inputfile" />
          <label for="thumbnail" class="inputfile-label">Choose a file</label>
        </div>
        <div id="title">
        	<%= f.text_field :name, placeholder: "Insert Podcast title", class: "border-animation" %>
        </div>
        <div id="description" >
          <%= f.text_area :description, placeholder: "Insert Podcast description", class: "border-animation" %>
        </div>

        <div class="btn-bar">
          <div id="pod-type">
            <ul>
              <li>
                <label class="container">Podcast audio
                  <input type="radio" name="radio" checked/>
                  <span class="checkmark"></span>
                </label>
              </li>
              <li>
                <label class="container">Podcast video
                  <input type="radio" name="radio" />
                  <span class="checkmark"></span>
                </label>
              </li>
            </ul>
          </div>
          <div class="right">
            <%= f.submit "Create my podcast", class: "button button-highlight" %>
            <%= link_to "Edit", root_path, class: "button button-white" %>
          </div>
        </div>
    <% end %>
