<!DOCTYPE html>
<html>
	<head>
	  <title>SmartCast</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Comfortaa' %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<!--<div class="container-fixed">-->
			<% if alert %>
				<div id="notice_wrapper">
					<p class="alert"><%= alert.html_safe %></p>
				</div>
			<% elsif notice %>
				<div id="notice_wrapper">
					<p class="notice"><%= notice.html_safe %></p>
				</div>
			<% end %>

			<%= render 'layouts/header' %>

			<%= yield %>

			<%= render 'layouts/footer' %>

			<script>
				$(document).ready(function(){
					setTimeout(function() {
						$('#notice_wrapper').fadeOut("slow", function() {
							$this.remove();
						});

						// devise errors div block
						$('#error_explanation').fadeOut("slow", function() {
							$this.remove();
						});
					}, 7000 );

					$('details').click(function (event) {
	    			$('details').not(this).removeAttr("open");  
	  			});
				});

				

			</script>
		<!--</div>-->

	</body>
</html>
